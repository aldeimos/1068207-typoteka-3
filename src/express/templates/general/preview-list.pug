section.main-page__list.preview
  h2.visually-hidden Список превью статей
  ul.preview__list
    each publication in publications
      li.preview__item
        ul.preview__breadcrumbs
          each category in publication.categories
              li.preview__breadcrumbs-item
                a.preview__breadcrumbs-link(href='#') #{category}
        .preview__background
          img.preview__background-image(src='/img/skyscraper@1x.jpg' width='460' height='240' srcset='/img/skyscraper@1x.jpg 1x, /img/skyscraper@2x.jpg 2x' alt='Фотография небоскреба')
        time.preview__time(datetime='2019-03-21T20:33') #{publication.createdDate}
        h3.preview__name
          a.preview__name-link(href='#') #{publication.title}
        p.preview__text
          | #{publication.announce}
        a.preview__comment(href='#')
          | Комментарии 
          span.preview__cloud
          b.preview__comment-count #{publication.comments.length}
    
